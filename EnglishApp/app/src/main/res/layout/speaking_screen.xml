<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E0F2F7">

    <!-- Top Bar -->
    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="2dp"
        android:background="#E0F2F7"
        android:padding="15dp">

        <ImageView
            android:id="@+id/avatar_image"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:background="@drawable/circle_bg_header"
            android:padding="10dp"
            app:srcCompat="@drawable/profile_img" />

        <ImageView
            android:id="@+id/notification_icon"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:background="@drawable/circle_bg_header"
            android:padding="10dp"
            app:srcCompat="@drawable/ic_notification" />

        <ImageView
            android:id="@+id/look_icon"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_toStartOf="@id/notification_icon"
            android:layout_marginEnd="16dp"
            android:background="@drawable/circle_bg_header"
            android:padding="5dp"
            app:srcCompat="@drawable/look_img_header" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:text="Master English"
            android:textColor="#000000"
            android:textSize="34sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <!-- Tagline Text -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:layout_marginTop="-20dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:text="O"
            android:textColor="#000000"
            android:textSize="34sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:text="ne step at a time"
            android:textColor="#DF2A2A"
            android:textSize="34sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Tab Navigation - Include -->
    <include layout="@layout/top_tab_navigation" />

    <!-- Main Content Area with RelativeLayout for overlapping elements -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1">

        <!-- Background Image -->
        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="290dp"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/bg_spkeakingscreen" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="190dp"
            android:layout_height="160dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="114dp"
            app:srcCompat="@drawable/earth_speakingscreen" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="101dp"
            android:layout_height="87dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="2dp"
            android:layout_marginTop="55dp"
            app:srcCompat="@drawable/avatar1_speakingscreen" />

        <ImageView
            android:id="@+id/imageView12"
            android:layout_width="100dp"
            android:layout_height="71dp"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="28dp"
            app:srcCompat="@drawable/chat_speakingscreen"
            app:tint="@color/blue" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/imageView12"
            android:layout_marginLeft="90dp"
            android:layout_marginBottom="25dp"
            android:text="Hello"
            android:textColor="#FFFFFF" />

        <!-- Right Avatar -->
        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="72dp"
            android:layout_height="87dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="30dp"
            app:srcCompat="@drawable/avatar2_speakingscreen" />

        <!-- Right Chat Bubble (Hi) -->
        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="106dp"
            android:layout_height="62dp"
            android:layout_marginStart="240dp"
            android:layout_marginTop="60dp"
            android:rotation="200"
            app:srcCompat="@drawable/chat_speakingscreen"
            app:tint="@color/blue" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="285dp"
            android:layout_marginTop="80dp"
            android:text="Hi"
            android:textColor="#FFFFFF" />

        <!-- Center Bottom Avatar -->
        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="160dp"
            app:srcCompat="@drawable/avatar3_speakingscreen" />

        <!-- Bottom Chat Bubble (good morning) -->
        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="450dp"
            android:layout_height="100dp"
            android:layout_marginStart="180dp"
            android:layout_marginTop="110dp"
            app:srcCompat="@drawable/chat_speakingscreen"
            app:tint="@color/blue" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="265dp"
            android:layout_marginTop="148dp"
            android:text="Hello World"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:textStyle="bold" />

        <!-- England Flag -->
        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="70dp"
            android:layout_marginTop="210dp"
            app:srcCompat="@drawable/england_speakingscreen" />

        <!-- Germany Flag -->
        <ImageView
            android:id="@+id/imageView16"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="116dp"
            app:srcCompat="@drawable/germany_speakingscreen" />

        <!-- Russia Flag -->
        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="260dp"
            android:layout_marginTop="210dp"
            app:srcCompat="@drawable/russia_speakingscreen" />

        <!-- Bottom Text and Button -->
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="320dp"
            android:gravity="center"
            android:text="Learn a language\nin 3 minute a day"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button"
            android:layout_width="300dp"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="390dp"
            android:background="@drawable/button_background"
            android:text="Start learning"
            android:textColor="@android:color/white"
            app:backgroundTint="@null" />
    </RelativeLayout>
</LinearLayout>