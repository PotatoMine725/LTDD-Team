<?xml version="1.0" encoding="utf-8"?>
<!-- Layout tái sử dụng cho Tab Navigation -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/top_tab_navigation_wrapper"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- Divider Line trên cùng -->
    <View
        android:id="@+id/divider_top"
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="#FF000000" />

    <!-- Tab Navigation -->
    <LinearLayout
        android:id="@+id/top_tab_navigation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!-- Tab Vocabulary -->
        <LinearLayout
            android:id="@+id/tab_vocabulary_container"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <TextView
                android:id="@+id/tab_vocabulary_text"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Vocabulary"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="normal" />

            <View
                android:id="@+id/tab_vocabulary_indicator"
                android:layout_width="100dp"
                android:layout_height="2dp"
                android:background="@android:color/transparent" />
        </LinearLayout>

        <!-- Tab Quiz/Test -->
        <RelativeLayout
            android:id="@+id/tab_quiz_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <TextView
                android:id="@+id/tab_quiz_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginStart="-5dp"
                android:paddingVertical="8dp"
                android:text="Quiz/Test"
                android:textColor="#000000"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/tab_quiz_indicator"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="4dp"
                android:layout_toEndOf="@id/tab_quiz_text"
                android:contentDescription="Dropdown arrow"
                android:src="@drawable/ic_double_down" />
        </RelativeLayout>

        <!-- Tab Listening -->
        <LinearLayout
            android:id="@+id/tab_listening_container"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <TextView
                android:id="@+id/tab_listening_text"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Listening"
                android:textSize="16sp"
                android:textStyle="normal" />

            <View
                android:id="@+id/tab_listening_indicator"
                android:layout_width="100dp"
                android:layout_height="2dp"
                android:background="@android:color/transparent" />
        </LinearLayout>

        <!-- Tab Speaking -->
        <LinearLayout
            android:id="@+id/tab_speaking_container"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <TextView
                android:id="@+id/tab_speaking_text"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Speaking"
                android:textSize="16sp"
                android:textStyle="normal" />

            <View
                android:id="@+id/tab_speaking_indicator"
                android:layout_width="100dp"
                android:layout_height="2dp"
                android:background="@android:color/transparent" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>