<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_speakingtest">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Page Navigation Bar -->
            <LinearLayout
                android:id="@+id/page_navigation_bar"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="45dp"
                android:background="@drawable/bg_page_speakingtest"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ic_prev"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/ic_prev" />

                <TextView
                    android:id="@+id/tv_page_number"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="1/5"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/ic_next"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/ic_next" />
            </LinearLayout>

            <!-- ====== MAIN CONTENT ====== -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:background="@drawable/bg_question_speakingtest"
                    android:padding="10dp"
                    android:text="How long have you worked? "
                    android:textColor="#000000"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageView19"
                    android:layout_width="223dp"
                    android:layout_height="177dp"
                    android:layout_marginTop="12dp"
                    app:srcCompat="@drawable/avatar3_speakingscreen" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="#D6F2FF"
                    android:orientation="vertical"
                    android:paddingBottom="24dp">

                    <ImageView
                        android:id="@+id/imageView20"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:scaleType="centerInside"
                        app:srcCompat="@drawable/ic_double_down" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="24dp"
                        android:layout_marginTop="12dp"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:paddingVertical="12dp">

                        <TextView
                            android:id="@+id/tv15"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="I ha"
                            android:textColor="#008FFF"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tv16"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ve"
                            android:textColor="#FF0000"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tv17"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" been work"
                            android:textColor="#008FFF"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tv18"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ing"
                            android:textColor="#FF0000"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tv19"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" in UI field for about 3 years."
                            android:textColor="#008FFF"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView16"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:background="@drawable/border_rec_blue"
                        android:padding="12dp"
                        android:text="Sound to improve: /รฐ/, /s/, /z/\nThe answer is a bit short and needs to be more detailed"
                        android:textColor="#090909"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Fixed Tool Bar -->
            <LinearLayout
                android:id="@+id/fixed_tool_bar"
                android:layout_width="match_parent"
                android:layout_height="165dp"
                android:background="#D6F2FF"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="15dp">

                <ImageView
                    android:id="@+id/imageView24"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/ic_bookmark1" />

                <ImageView
                    android:id="@+id/imageView22"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/bg_micro"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/ic_micro"
                    app:tint="#FFFFFF" />

                <ImageView
                    android:id="@+id/iv_ear"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/ic_ears" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
