<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <!-- Top Bar -->
    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="2dp"
        android:background="#E0F2F7"
        android:padding="15dp">

        <ImageView
            android:id="@+id/avatar_image"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:background="@drawable/circle_bg_header"
            android:padding="10dp"
            app:srcCompat="@drawable/profile_img" />

        <ImageView
            android:id="@+id/btn_notification"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/avatar_image"
            android:layout_marginEnd="16dp"
            android:background="@drawable/circle_bg_header"
            android:padding="10dp"
            app:srcCompat="@drawable/ic_notification" />

        <ImageView
            android:id="@+id/look_icon"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_toStartOf="@id/btn_notification"
            android:layout_alignTop="@id/avatar_image"
            android:layout_marginEnd="16dp"
            android:background="@drawable/circle_bg_header"
            android:padding="5dp"
            app:srcCompat="@drawable/look_img_header" />

        <LinearLayout
            android:id="@+id/quiz_title_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:letterSpacing="0.05"
                android:text="Qu"
                android:textColor="#FF0000"
                android:textSize="34sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:letterSpacing="0.05"
                android:text="iz"
                android:textColor="@android:color/black"
                android:textSize="34sp"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>

    <!-- Tab Navigation - Include -->
    <include layout="@layout/top_tab_navigation" />

    <!-- Main Content Area -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="100dp">

                <!-- Progress Bar Section -->
                <LinearLayout
                    android:id="@+id/linearLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/iv_back"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_back"
                        app:tint="@android:color/black" />

                    <RelativeLayout
                        android:id="@+id/progress_container"
                        android:layout_width="0dp"
                        android:layout_height="10dp"
                        android:layout_weight="1"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/progress_bar_background">

                        <View
                            android:id="@+id/progress_completed"
                            android:layout_width="210dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentStart="true"
                            android:layout_weight="100"
                            android:background="@drawable/progress_completed_background"
                            app:backgroundTint="@null" />
                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/iv_menu"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_3dot_vertical"
                        app:tint="@android:color/black" />
                </LinearLayout>

                <!-- Chat Icon and Instruction -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="8dp">

                    <ImageView
                        android:id="@+id/iv_chat_icon"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_alignParentStart="true"
                        app:srcCompat="@drawable/logo_app" />

                    <TextView
                        android:id="@+id/tv_instruction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/iv_chat_icon"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="12dp"
                        android:background="@drawable/bg_rec_white_radius"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="8dp"
                        android:text="Complete the sentences!"
                        android:textColor="@android:color/black"
                        android:textSize="18sp" />
                </RelativeLayout>

                <!-- Avatar and Audio Wave -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp">

                    <ImageView
                        android:id="@+id/iv_avatar"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_alignParentStart="true"
                        app:srcCompat="@drawable/avatar3_speakingscreen" />

                    <ImageView
                        android:id="@+id/iv_wave"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_toEndOf="@id/iv_avatar"
                        android:layout_toStartOf="@id/iv_reload"
                        android:layout_alignTop="@id/iv_avatar"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="8dp"
                        app:srcCompat="@drawable/ic_wave" />

                    <ImageView
                        android:id="@+id/iv_reload"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignTop="@id/iv_wave"
                        app:srcCompat="@drawable/ic_reload" />

                    <!-- Buttons under wave -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/iv_wave"
                        android:layout_toEndOf="@id/iv_avatar"
                        android:layout_alignEnd="@id/iv_reload"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btn_success"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/button_success_background"
                            android:text="Success"
                            android:textAllCaps="false"
                            android:textColor="@android:color/black" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btn_fail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:background="@drawable/button_fail_background"
                            android:text="Fail"
                            android:textAllCaps="false"
                            android:textColor="@android:color/black" />
                    </LinearLayout>
                </RelativeLayout>

                <!-- Text Input -->
                <EditText
                    android:id="@+id/editTextText3"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginHorizontal="16dp"
                    android:ems="10"
                    android:inputType="text"
                    android:text="A quick brown fox jumps over a lazy dog"
                    android:textAlignment="center"
                    android:textStyle="bold" />

            </LinearLayout>
        </ScrollView>

        <!-- Check and Next Buttons (Overlay) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="80dp"
            android:layout_marginHorizontal="24dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_check"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginEnd="12dp"
                android:background="@drawable/button_check_background"
                android:paddingHorizontal="32dp"
                android:text="Check"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_next"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:background="@drawable/button_next_background"
                android:drawableEnd="@drawable/ic_arrow_forward"
                android:drawablePadding="8dp"
                android:paddingStart="32dp"
                android:paddingEnd="20dp"
                android:text="Next"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                app:drawableTint="@color/white" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>